{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "lib": [
      "es5", "es6", "dom", "dom.iterable"
    ],
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "outDir": "/build",
    "baseUrl": "./",
    "incremental": true
  },
  "exclude": ["node_modules", "build", "dist"],
}